{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "./build"
  },
  "include": ["src/**/*", "typings"],
  "exclude": [
    "node_modules"
  ]
}
